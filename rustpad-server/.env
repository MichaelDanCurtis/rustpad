# Rustpad Server Configuration

# Enable file freeze feature (30-day persistence)
ENABLE_FILE_FREEZE=true
SAVE_DIR=./frozen_documents

# Enable AI features (can be configured via admin panel)
ENABLE_AI=true
# OPENROUTER_API_KEY will be set via admin panel

# Enable artifact storage for multi-file AI outputs
ENABLE_ARTIFACTS=true
ARTIFACTS_DIR=./artifacts

# Server port
PORT=3030

# Document expiry (days of inactivity before cleanup)
EXPIRY_DAYS=1
